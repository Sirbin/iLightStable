	td.Hour = DateTime.GetHour(DateTime.Now)
	td.Minute = DateTime.GetMinute(DateTime.Now)
	td.Is24Hours = True
	ret = td.Show("Set the required time", "B4A Time Dialog", "Yes", "No", "Maybe", Bmp)
	ToastMessageShow(ret & " : " & td.Hour & ":" & td.Minute, False)
End Sub

