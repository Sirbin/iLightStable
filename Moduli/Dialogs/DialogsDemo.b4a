Sub btnFile_Click
	Dim fd As FileDialog
	fd.FastScroll = True
	'fd.ShowOnlyFolders = True
	fd.FilePath = File.DirRootExternal ' also sets ChosenName to an emtpy string
	'fd.ShowOnlyFolders = true
	'fd.FileFilter = ".txt" ' for example or ".jpg,.png" for multiple file types
